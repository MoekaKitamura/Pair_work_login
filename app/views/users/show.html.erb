<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<hr>
<h2><strong>私のお気に入り一覧</strong></h2>
<table border="1">
  <thead>
    <tr>
      <th>User name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @favorite.each do |f| %>
      <tr>
        <td><%= f.user.name %></td>
        <td><%= f.title %></td>
        <td><%= f.content %></td>
      </tr>
    <% end %>
    </tbody>
</table>

<h2><%= link_to '新規投稿する', new_blog_path %></h2>
<h4><%= link_to 'すべての投稿を見る', blogs_path %></h4>